{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "build:doc": "typedoc",
    "clean": "turbo run clean",
    "commands": "pnpm --filter=@just-web/react-commands",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "nuke": "rimraf node_modules",
    "react": "pnpm --filter=@just-web/react",
    "release": "pnpm build && changeset publish",
    "size": "turbo run size",
    "test": "turbo run test",
    "verify": "turbo run lint build coverage depcheck size",
    "version": "changeset version",
    "prepare": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^17"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "eslint": "^8.17.0",
    "eslint-plugin-harmony": "^7.1.1",
    "eslint-plugin-yml": "^1.2.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "plop": "^3.1.1",
    "turbo": "1.6.3",
    "typedoc": "^0.23.21",
    "typedoc-plugin-extras": "^2.3.1",
    "typedoc-plugin-resolve-crossmodule-references": "^0.3.2",
    "typescript": "^4.9.3"
  },
  "packageManager": "pnpm@7.17.0"
}
