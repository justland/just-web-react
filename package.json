{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "build:doc": "typedoc",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "nuke:local": "rimraf node_modules || true",
    "nuke": "turbo run nuke && pnpm nuke:local",
    "react-commands": "pnpm --filter=@just-web/react-commands",
    "react": "pnpm --filter=@just-web/react",
    "release": "changeset publish",
    "size": "turbo run size",
    "test": "turbo run test",
    "verify": "turbo run verify",
    "version": "changeset version && pnpm install",
    "watch": "jest --watch",
    "prepare": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@just-web/repo-scripts": "^0.1.1",
    "@types/eslint": "^8.4.3",
    "@types/jest": "^27.5.2",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.0.0",
    "npm-check-updates": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "plop": "^3.1.1",
    "turbo": "1.5.6",
    "typedoc": "^0.23.15",
    "typedoc-plugin-extras": "^2.3.0",
    "typedoc-plugin-resolve-crossmodule-references": "^0.3.0",
    "typescript": "^4.8.4"
  },
  "packageManager": "pnpm@7.17.1"
}
