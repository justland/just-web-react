  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./dist/just-web-react.js",
    "require": "./dist/just-web-react.cjs",
    "default": "./dist/just-web-react.js",
    "types": "./dts/index.d.ts"
  },
  "source": "./ts/index.ts",
  "types": "./dts/index.d.ts",
  "files": [
    "dist",
    "dts",
    "ts",
    "!**/*.spec.*",
    "!**/*.stories.*",
    "!*/dummyModule.*"
